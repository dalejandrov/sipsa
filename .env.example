# SIPSA Application Environment Variables
# Copy this file to .env and adjust values as needed

# Server Configuration
PORT=8080

# Spring Profiles
SPRING_PROFILES_ACTIVE=dev

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sipsa_db
DB_USERNAME=sipsa_user
DB_PASSWORD=sipsa_pass
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=2
DB_IDLE_TIMEOUT=30000

# Application Configuration
SIPSA_TIMEZONE=America/Bogota

# Pagination Configuration
SIPSA_MAX_PAGE_SIZE=1000
SIPSA_DEFAULT_PAGE_SIZE=20
SIPSA_MAX_USER_PAGE_SIZE=100

# SOAP Service Configuration
SOAP_ENDPOINT=https://appweb.dane.gov.co/sipsaWS/SrvSipsaUpraBeanService
SOAP_NAMESPACE=http://servicios.sipsa.co.gov.dane/
SOAP_CONNECT_TIMEOUT_MS=30000
SOAP_READ_TIMEOUT_MS=3600000
SOAP_MAX_RETRIES=3
SOAP_RETRY_BACKOFF_MS=2000
SOAP_MAX_CHILD_ELEMENTS=0
SOAP_LOGGING_ENABLED=false

# Ingestion Configuration
INGESTION_BATCH_SIZE=500
DAILY_WINDOW_START=14:20
DAILY_WINDOW_END=23:59
MONTHLY_RUN_DAYS=8,10
MONTHLY_WINDOW_START=06:00
MAX_REJECT_COUNT=5000
MAX_REJECT_RATE=0.01

# Task Scheduling
TASK_POOL_SIZE=5

# Logging Levels
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SIPSA=INFO
LOG_LEVEL_JDBC=INFO
LOG_LEVEL_CXF=WARN
